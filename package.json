{
  "name": "chain-guardian",
  "version": "0.0.1",
  "description": "Eth2.0 desktop validator client",
  "keywords": [
    "eth2",
    "serenity",
    "validator",
    "blockchain",
    "electron",
    "typescript"
  ],
  "main": "./dist/main.js",
  "contributors": [
    "NodeFactory <info@nodefactory.io>"
  ],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nodefactoryio/ChainGuardian/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nodefactoryio/ChainGuardian.git"
  },
  "engines": {
    "node": "12.4.0"
  },
  "homepage": "https://github.com/nodefactoryio/ChainGuardian",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "yarn run build-main && yarn run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env START_HOT=1 yarn run start-renderer-dev",
    "prestart": "yarn run build",
    "start": "electron .",
    "lint": "eslint --color --ext .ts --ext .tsx src/ test/",
    "lint:fix": "yarn run lint --fix",
    "check-types": "tsc --noEmit",
    "test": "jest '(\\/test\\/(?!e2e/)).*'",
    "pretest:e2e": "yarn run build",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "pack": "yarn run build && electron-builder --dir",
    "dist": "yarn run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "ProductName",
    "appId": "org.your.productname",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.6",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.13",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.0.9",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webdriverio": "^4.8.7",
    "@types/webpack-env": "^1.13.3",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.1.3",
    "css-loader": "^2.1.1",
    "electron": "6.0.9",
    "electron-builder": "21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "react-hot-loader": "^4.8.8",
    "react-test-renderer": "^16.8.6",
    "redux-devtools-extension": "^2.13.5",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "spectron": "8.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1"
  }
}
